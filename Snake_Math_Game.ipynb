   "outputs": [],
   "source": [
    "#Download player data dictionary from firebase key: Snake Game Player Data\n",
    "def download_data(db, key, user):\n",
    "    #Use firebase credientials to get the player data dictionary\n",
    "    node = db.child(key).get(user['idToken']) \n",
    "    all_data = node.val()\n",
    "    return all_data\n",
    "\n",
    "#Modify the high score and upload the player data dictionary into firebase key: Snake Game Player Data\n",
    "def upload_data(db, key, user, all_data, uid, high_score):\n",
    "    #Update the high score in the player data dictionary and upload to firebase\n",
    "    all_data[uid] = high_score\n",
    "    db.child(key).set(all_data, user['idToken'])"
   ]

    "#Snake controls\n",
    "\"\"\"\n",
    "The code for the snake's controls was modified from \n",
    "https://www.geeksforgeeks.org/create-a-snake-game-using-turtle-in-python/\n",
    "\"\"\"\n",
    "\n",
    "#Function's to set the snake's direction when called upon\n",
    "#The if statement is added so that the snake can't change \n",
    "#direction instantenously\n",
    "#90: Up/North, 270: Down/South, 180:Left/West, 0:Right/East in standard mode\n",
    "def up():\n",
    "    if(snake_head.heading()!=270):\n",
    "        snake_head.setheading(90)\n",
    "  \n",
    "  \n",
    "def down():\n",
    "    if(snake_head.heading()!=90):\n",
    "        snake_head.setheading(270)\n",
    "  \n",
    "  \n",
    "def left():\n",
    "    if(snake_head.heading()!=0):\n",
    "        snake_head.setheading(180)\n",
    "  \n",
    "  \n",
    "def right():\n",
    "    if(snake_head.heading()!=180):\n",
    "        snake_head.setheading(0)\n",
    "  \n",
    "    \n",
    "def move_snake(speed):\n",
    "    #Keep moving the snake head in the current direction it's pointing in\n",
    "    if snake_head.heading() == 90:\n",
    "        y = snake_head.ycor()\n",
    "        snake_head.sety(y+speed)\n",
    "    if snake_head.heading() == 270:\n",
    "        y = snake_head.ycor()\n",
    "        snake_head.sety(y-speed)\n",
    "    if snake_head.heading() == 180:\n",
    "        x = snake_head.xcor()\n",
    "        snake_head.setx(x-speed)\n",
    "    if snake_head.heading() == 0:\n",
    "        x = snake_head.xcor()\n",
    "        snake_head.setx(x+speed)\n",
    "  \n",
    "    #Set the screen ready to listen to keypress events\n",
    "    #Example: if \"w\" is pressed, execute up function\n",
    "screen.listen()\n",
    "screen.onkeypress(up, \"w\")\n",
    "screen.onkeypress(down, \"s\")\n",
    "screen.onkeypress(left, \"a\")\n",
    "screen.onkeypress(right, \"d\")"
